/** 
* @file create.sqlite
* @brief Creation script for database tables
* This database contains relationships and data for all exercises, muscles, and
* things that are NOT specific to user profiles
* @author Jesse Pinnell
* @date 2017-09-16
*/

-- TODO Optimizations such as simple integer keys and the like (easy to read for now)

PRAGMA foreign_keys = ON;
-- Muscles to exercise
DROP TABLE IF EXISTS Muscles;
CREATE TABLE Muscles
(
   Name TEXT NOT NULL PRIMARY KEY,
   MuscleGroup TEXT NOT NULL,
   Info TEXT DEFAULT NULL 
);

-- TODO create table of agonists/antagonists

-- Exercise equipment that is stationary
DROP TABLE IF EXISTS Fixtures;
CREATE TABLE Fixtures
(
   Name TEXT NOT NULL, -- can have more than one to be able to have > 1 reistance record
   Note TEXT DEFAULT "",
   MinResistance REAL NOT NULL,  -- Resistances in lbs.
   MaxResistance REAL NOT NULL
);


-- Exercise equipment that can be moved
-- TODO split differently so note doesn't need to be here
DROP TABLE IF EXISTS EquipmentAccessories;
CREATE TABLE EquipmentAccessories
(
   Name TEXT NOT NULL,
   Note TEXT DEFAULT "",
   MinResistance REAL NOT NULL,  -- Resistances in lbs.
   MaxResistance REAL NOT NULL
);

-- Equipment combinations used for a given exercise
-- For max equippable, assume the capacity is reduced by the same equally (for now)
DROP TABLE IF EXISTS EquipmentRigs;
CREATE TABLE EquipmentRigs
(
   Name TEXT NOT NULL, -- can be many per exercise, so not unique
   Required BOOLEAN NOT NULL DEFAULT 0,
   /* If an even number of accessories is necessary (example, plates)
   then when caculating the possible resistances for an exercise, only
   options with both will be listed */
   Paired BOOLEAN NOT NULL DEFAULT 0,
   MaxEquippable UNSIGNED INT NOT NULL DEFAULT 0, -- the number of the given accessories that can fit
   EquipmentAccessory TEXT NOT NULL
);

-- Individual exercises and the required equipment
DROP TABLE IF EXISTS Exercises;
CREATE TABLE Exercises
(
   Name TEXT NOT NULL PRIMARY KEY,
   Documentation TEXT DEFAULT "" -- TODO make proper table for this
);

DROP TABLE IF EXISTS ExerciseFixtures;
CREATE TABLE ExerciseFixtures
(
   ExerciseName TEXT NOT NULL,
   FixtureName TEXT NOT NULL,
   FOREIGN KEY(ExerciseName) REFERENCES Exercise(Name)
   FOREIGN KEY(FixtureName) REFERENCES Fixtures(Name)
);

DROP TABLE IF EXISTS ExerciseEquipmentRigs;
CREATE TABLE ExerciseEquipmentRigs
(
   ExerciseName TEXT NOT NULL,
   EquipmentRigName TEXT NOT NULL,
   FOREIGN KEY(ExerciseName) REFERENCES Exercise(Name)
   FOREIGN KEY(EquipmentRigName) REFERENCES EquipmentRig(Name)
);

DROP TABLE IF EXISTS MusclesExercised;
CREATE TABLE MusclesExercised
(
   ExerciseName TEXT NOT NULL, -- can be many per exercise, so not unique
   Muscle TEXT NOT NULL,
   FOREIGN KEY(ExerciseName) REFERENCES Exercises(Name),
   FOREIGN KEY(Muscle) REFERENCES Muscles(Name)
);

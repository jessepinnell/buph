/** 
* @file create.sqlite
* @brief Creation script for database tables
* @author Jesse Pinnell
* @date 2017-09-16
*/

PRAGMA foreign_keys = ON;
-- Muscles to exercise
DROP TABLE IF EXISTS Muscles;
CREATE TABLE IF NOT EXISTS Muscles
(
   Name TEXT NOT NULL PRIMARY KEY,
   MuscleGroup TEXT NOT NULL,
   Info TEXT DEFAULT NULL 
);

-- Exercise equipment that is stationary
DROP TABLE IF EXISTS Fixtures;
CREATE TABLE Fixtures
(
   Name TEXT NOT NULL PRIMARY KEY,
   Quantity INTEGER NOT NULL DEFAULT 0 
);

-- Denominations of resistance
-- This whole table is to support accessories with more than one weight
DROP TABLE IF EXISTS EquipmentResistance;
CREATE TABLE EquipmentResistance
(
   ID INTEGER NOT NULL PRIMARY KEY,
   Resistance REAL -- NULL means n/a
);

-- Exercise equipment that can be moved
DROP TABLE IF EXISTS EquipmentAccessories;
CREATE TABLE EquipmentAccessories
(
   Name TEXT NOT NULL,
   Note TEXT DEFAULT "", -- maybe contain color of plate
   Count INTEGER NOT NULL DEFAULT false,
   Resistance INTEGER NOT NULL,
   FOREIGN KEY(Resistance) REFERENCES EquipmentResistance(ID)
);

-- Equipment combinations used for a given exercise
DROP TABLE IF EXISTS EquipmentRigs;
CREATE TABLE IF NOT EXISTS EquipmentRigs
(
   Name TEXT NOT NULL, -- can be many per exercise, so not unique
   Required BOOLEAN NOT NULL DEFAULT 0,
   Paired BOOLEAN NOT NULL DEFAULT 0, -- if an even number of accessories is necessary (plates)
   EquipmentAccessory INTEGER NOT NULL
);

-- Individual exercises and the required equipment
DROP TABLE IF EXISTS Exercises;
CREATE TABLE IF NOT EXISTS Exercises
(
   Name TEXT PRIMARY KEY NOT NULL,
   Fixture INTEGER NOT NULL,
   EquipmentRig INTEGER DEFAULT NULL, -- NULL when no equipment is used
   Documentation TEXT DEFAULT "", -- TODO make proper table for this
   FOREIGN KEY(Fixture) REFERENCES Fixtures(Name)
);

DROP TABLE IF EXISTS MusclesExercised;
CREATE TABLE IF NOT EXISTS MusclesExercised
(
   ExerciseName TEXT NOT NULL,
   Muscle TEXT NOT NULL,
   FOREIGN KEY(ExerciseName) REFERENCES Exercises(Name),
   FOREIGN KEY(Muscle) REFERENCES Muscles(Name)
);

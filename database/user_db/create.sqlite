/** 
* @file create.sqlite
* @brief Creation script for user tables
* This database contains relationships and data for all user equipment, history, etc.
* it is very basic and isn't intended to handle large amounts of users
* @author Jesse Pinnell
* @date 2017-09-23
*/


PRAGMA foreign_keys = ON;
-- Inventory of exercise equipment that is stationary

DROP TABLE IF EXISTS UserProfiles;
CREATE TABLE UserProfiles
(
   UID INTEGER NOT NULL PRIMARY KEY,
   Name TEXT NOT NULL,
   Notes TEXT DEFAULT ""
);

DROP TABLE IF EXISTS UserFixtures;
CREATE TABLE UserFixtures
(
   UID INTEGER NOT NULL REFERENCES UserProfiles(UID),
   Name TEXT NOT NULL PRIMARY KEY,
   MinSetting INTEGER DEFAULT 0,
   MaxSetting INTEGER DEFAULT 0,
   Quantity INTEGER NOT NULL DEFAULT 0
);

-- TODO break up UserRigs into tables that can be used to
-- determine possible resitances and rigs based on accessories on hand;
-- XXX This table is temporary

DROP TABLE IF EXISTS UserRigs;
CREATE TABLE UserRigs
(
   UID INTEGER NOT NULL REFERENCES UserProfiles(UID),
   Name TEXT NOT NULL PRIMARY KEY,
   MinSetting INTEGER DEFAULT 0,
   MaxSetting INTEGER DEFAULT 0,
   Quantity INTEGER NOT NULL DEFAULT 0
);

DROP TABLE IF EXISTS ExerciseSetHistory;
CREATE TABLE ExerciseSetHistory
(
   UID INTEGER NOT NULL REFERENCES UserProfiles(UID),
   ExerciseName TEXT NOT NULL,
   Duration INTEGER NOT NULL,
   Setting INTEGER NOT NULL DEFAULT 0,
   Time TEXT NOT NULL DEFAULT ""  -- ISO8601 format for debugging; timestamp later
);

